# Copy this file to .env and fill in your values
# For Render: set DATABASE_URL and PORT in the Render dashboard (Environment)

PORT=3000
DATABASE_URL=postgresql://username:password@localhost:5432/fitchef_db

# Admin dashboard (JWT + seed)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
INITIAL_ADMIN_EMAIL=admin@fitchef.fit
INITIAL_ADMIN_PASSWORD=Admin@123
INITIAL_ADMIN_NAME=FitChef Admin

